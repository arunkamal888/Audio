import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.util.Base64;

public class PNGToBase64Converter {

    public static void main(String[] args) {
        String filePath = "path/to/your/image.png";  // Replace with your PNG file path
        String base64FilePath = "base64Image.txt";   // Output file path for Base64 encoded image

        try {
            // Read PNG file into byte array
            byte[] fileContent = readBytesFromFile(filePath);

            // Encode byte array to Base64 string
            String base64Image = Base64.getEncoder().encodeToString(fileContent);

            // Write Base64 string to a file
            writeBase64ToFile(base64Image, base64FilePath);

            System.out.println("Image converted to Base64 successfully and saved to " + base64FilePath);
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    private static byte[] readBytesFromFile(String filePath) throws IOException {
        File file = new File(filePath);
        FileInputStream fis = new FileInputStream(file);
        byte[] fileContent = new byte[(int) file.length()];
        fis.read(fileContent);
        fis.close();
        return fileContent;
    }

    private static void writeBase64ToFile(String base64Image, String base64FilePath) throws IOException {
        FileOutputStream fos = new FileOutputStream(base64FilePath);
        fos.write(base64Image.getBytes());
        fos.close();
    }
}
