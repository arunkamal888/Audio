SafariOptions safariOptions = new SafariOptions();
safariOptions.setCapability("platformName", "iOS");
safariOptions.setCapability("platformVersion", "16.0"); // Check for the exact supported version
safariOptions.setCapability("deviceName", "iPhone 14 Pro"); // Verify the exact device name

MutableCapabilities sauceOptions = new MutableCapabilities();
sauceOptions.setCapability("name", "iPhone Safari Test");
sauceOptions.setCapability("build", "Sample Build");
sauceOptions.setCapability("appiumVersion", "2.0.0"); // Use the supported Appium version

MutableCapabilities capabilities = new MutableCapabilities();
capabilities.setCapability(SafariOptions.CAPABILITY, safariOptions);
capabilities.setCapability("sauce:options", sauceOptions);
