import java.io.*;

public class RunPythonScript {
    public static void main(String[] args) {
        try {
            String pythonScriptPath = "path_to_your_script/speech_to_text.py";
            String audioFilePath = "path_to_your_audio_file.wav";
            String[] cmd = new String[]{"python", pythonScriptPath, audioFilePath}; // Use "python3" if applicable

            ProcessBuilder pb = new ProcessBuilder(cmd);
            Process process = pb.start();

            // Reading output and errors
            BufferedReader stdInput = new BufferedReader(new InputStreamReader(process.getInputStream()));
            BufferedReader stdError = new BufferedReader(new InputStreamReader(process.getErrorStream()));

            System.out.println("Output of the Python script:");
            String line;
            while ((line = stdInput.readLine()) != null) {
                System.out.println(line);
            }

            System.out.println("Errors (if any):");
            while ((line = stdError.readLine()) != null) {
                System.out.println(line);
            }
        } catch (Exception ex) {
            ex.printStackTrace();
        }
    }
}
