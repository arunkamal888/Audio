  RestAssured.baseURI = "https://saucelabs.com/rest/v1/";
        String videoUrl = "jobs/" + username + "/jobs/" + sessionId + "/assets/video.mp4";

        // Encode credentials
        String auth = username + ":" + accessKey;
        String encodedAuth = Base64.getEncoder().encodeToString(auth.getBytes());

        // Perform GET request
        Response response = RestAssured
            .given()
            .header("Authorization", "Basic " + encodedAuth)
            .when()
            .get(videoUrl);

        // Check if the request was successful
        if (response.getStatusCode() == 200) {
            try (InputStream inputStream = response.asInputStream();
                 OutputStream outputStream = new FileOutputStream("session_video.mp4")) {

                byte[] buffer = new byte[1024];
                int bytesRead;
                while ((bytesRead = inputStream.read(buffer)) != -1) {
                    outputStream.write(buffer, 0, bytesRead);
                }

                System.out.println("Video downloaded successfully!");

            } catch (Exception e) {
                e.printStackTrace();
            }
        } else {
            System.out.println("Failed to download video. HTTP code: " + response.getStatusCode());
        }
    }
