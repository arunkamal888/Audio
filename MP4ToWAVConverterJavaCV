import org.bytedeco.javacv.FFmpegFrameGrabber;
import org.bytedeco.javacv.Frame;

import java.nio.ShortBuffer;

public class MP4SilenceDetection {

    public static void main(String[] args) {
        String filePath = "path/to/your/file.mp4";

        try {
            // Initialize FFmpegFrameGrabber to extract frames
            FFmpegFrameGrabber grabber = new FFmpegFrameGrabber(filePath);
            grabber.start();

            Frame frame;
            boolean isSilent = true;
            double silenceThreshold = 0.02; // Adjust this threshold as needed
            int silenceDurationThreshold = 1000; // in milliseconds, adjust based on requirement
            int silentFrameCount = 0;
            int frameRate = grabber.getFrameRate();

            while ((frame = grabber.grab()) != null) {
                if (frame.samples != null) {
                    ShortBuffer buffer = (ShortBuffer) frame.samples[0];
                    short[] audioData = new short[buffer.capacity()];
                    buffer.get(audioData);

                    boolean currentFrameSilent = true;
                    for (short sample : audioData) {
                        double normalizedSample = sample / 32768.0;
                        if (Math.abs(normalizedSample) > silenceThreshold) {
                            currentFrameSilent = false;
                            isSilent = false;
                            break;
                        }
                    }

                    if (currentFrameSilent) {
                        silentFrameCount++;
                    } else {
                        silentFrameCount = 0;
                    }

                    if (silentFrameCount >= silenceDurationThreshold * frameRate / 1000) {
                        System.out.println("Detected extended silence in the audio.");
                        break;
                    }
                }
            }

            if (isSilent) {
                System.out.println("The entire audio track is silent.");
            } else if (silentFrameCount < silenceDurationThreshold * frameRate / 1000) {
                System.out.println("No extended silence detected in the audio.");
            }

            grabber.stop();

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
