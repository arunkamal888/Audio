import java.io.*;

public class PythonExecutor {
    public static void main(String[] args) {
        // Hard-coded path to the audio file
        String audioFilePath = "/absolute/path/to/your/audio.wav";  // Adjust this to the path of your audio file

        try {
            // Path to the Python script
            String pythonScriptPath = "/absolute/path/to/your/transcribe_audio.py";  // Ensure this path is correct

            // Setup the ProcessBuilder
            // Use "python" or "python3" depending on your system configuration
            ProcessBuilder processBuilder = new ProcessBuilder("python", pythonScriptPath, audioFilePath);
            processBuilder.redirectErrorStream(true); // Redirect errors to the output stream

            // Start the process
            Process process = processBuilder.start();

            // StringBuilder to store the output
            StringBuilder output = new StringBuilder();

            // Read the output from the process
            BufferedReader reader = new BufferedReader(new InputStreamReader(process.getInputStream()));
            String line;
            while ((line = reader.readLine()) != null) {
                output.append(line).append("\n");
            }

            // Wait for the process to finish and check the exit value
            int exitCode = process.waitFor();
            System.out.println("Exited with code : " + exitCode);

            // Output the result
            System.out.println("Output of the Python script:");
            System.out.println(output.toString());

        } catch (IOException e) {
            System.err.println("IOException occurred: " + e.getMessage());
        } catch (InterruptedException e) {
            System.err.println("Process was interrupted: " + e.getMessage());
        }
    }
}
