package com.example;

import com.example.utils.WebDriverManager;
import org.openqa.selenium.WebDriver;
import org.testng.Assert;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.Test;

public class SauceTest {

    private WebDriver driver;

    @BeforeMethod
    public void setUp() {
        driver = WebDriverManager.getDriver();
        driver.get("https://example.com");
    }

    @Test
    public void testMethod1() {
        System.out.println("Executing testMethod1 in SauceTest. Thread ID: " + Thread.currentThread().getId());
        Assert.assertTrue(driver.getTitle().contains("Example Domain"), "Title verification failed.");
    }

    @Test
    public void testMethod2() {
        System.out.println("Executing testMethod2 in SauceTest. Thread ID: " + Thread.currentThread().getId());
        Assert.assertTrue(driver.getCurrentUrl().contains("example"), "URL verification failed.");
    }

    @AfterMethod
    public void tearDown() {
        WebDriverManager.quitDriver();
    }
}
